{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/pulumi-language-dotnet-exec.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "-r",
                "linux-x64",
                "${workspaceFolder}/pulumi-language-dotnet-exec.csproj"
            ],
            "problemMatcher": "$msCompile"
        }        
    ]
}